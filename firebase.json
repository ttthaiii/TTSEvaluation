{
    "firestore": {
        "rules": "firestore.rules"
    },
    "hosting": {
        "source": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "frameworksBackend": {
            "region": "asia-southeast1",
            "env": {
                "APP_SERVICE_ACCOUNT_KEY": "secret:APP_SERVICE_ACCOUNT_KEY"
            }
        }
    }
}